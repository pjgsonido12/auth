<div id="content-wrap">	
	<div id="sidebar">
	  <h1> Deleting this project will make status in active. </h1>
	  <%= button_to("Delete Project", cancel_project_url(@project), {:onclick => "return confirm('Are you sure you want to delete this project?')", :method => :put, :class => "button" }) %>
	</div>

	
<div id="main"> <a name="TemplateInfo"></a>	
<h1> Edit Project</h1>

<%= form_for @project, :html => {:method => :put,:class => "person"} do |f| %>
  <% if @project.errors.any? %>
    <div class="error_messages">
	  <h2>Form is valid</h2>
	  <ul>
		  <% for message in @project.errors.full_messages %>
		  <li><%= message%></li>
		  <% end %>
	  </ul>
	</div>
  <% end %>
  <p>
  <div class="field">
	<%= f.label :name %>
	<%= f.text_field :name %>
  </div></p>
  <p>
  <div class="field", style="margin-top:-30px;">
	<%= f.label :description %>
	<%= f.text_area :description, :size => "38x20" %>
  </div></p>  
	<%= f.hidden_field :updatedby, :value => current_user.id %> 
  <br />
  <div class="submit">
      <%= submit_tag "Update project", :class => "button" %> <small>or <%= link_to 'cancel', overview_project_url(@project), :class => "red" %></small>
  </div>

<% end %>
</div>

</div>

<div id="footer">
</div>