<div id="left-side" class="matting">	
<h3> Edit Project</h3>

<%= form_for @project, :html => {:method => :put,:class => "person"} do |f| %>
  <% if @project.errors.any? %>
    <div class="error_messages">
	  <h2>Form is valid</h2>
	  <ul>
		  <% for message in @project.errors.full_messages %>
		  <li><%= message%></li>
		  <% end %>
	  </ul>
	</div>
  <% end %>
  
  <div class="field">
	<%= f.label :name %>
	<%= f.text_field :name %>
  </div>
  <div class="field">
	<%= f.label :description %>
	<%= f.text_area :description, :size => "38x20" %>
  </div>
  <div class="field">
	<%= f.hidden_field :updatedby, :value => current_user.id %>
  </div>
  <div class="submit">
      <%= submit_tag "Update project" %> <small>or <%= link_to 'cancel', overview_project_url(@project), :class => "red" %></small>
  </div>

<% end %>
</div>

<div id="right-side">
  <div class='field'> Deleting this project will make status in active. 
  </div>
  <%= button_to("Delete Project", cancel_project_url(@project), {:onclick => "return confirm('Are you sure you want to delete this project?')", :method => :put }) %>
</div>