<%= render :partial => "layouts/mainlinks" %>

<div id="content-wrap">
<div id="main"> <a name="TemplateInfo"></a>
<h1>Add Person Information</h1>

<%= form_for @person,:html => {:class => "person"} do |f| %>
  <% if @person.errors.any? %>
    <div class="error_messages">
	  <h2>Form is valid</h2>
	  <ul>
		  <% for message in @person.errors.full_messages %>
		  <li><%= message%></li>
		  <% end %>
	  </ul>
	</div>
  <% end %>
  <p>
  <div class="field">
	<%= f.label :firstname %>
	<%= f.text_field :firstname %>
  </div>
  </p>
  <p>
  <div class="field", style="margin-top:-30px;">
	<%= f.label :lastname %>
	<%= f.text_field :lastname %>
  </div>
  </p>
  <div class="field">
	<%= f.label :email %>
	<%= f.text_field :email %>
  </div>
  </p>
  <p>
  <div class="field", style="margin-top:-30px;">
	<%= f.label :password %>
	<%= f.password_field :password, :style => "width:275px" %>
  </div>
  </p>
  <p>
  <div class="field", style="margin-top:-30px;">
	<%= f.label :password_confirmation %>
	<%= f.password_field :password_confirmation %>
  </div>
  </p>
  <p>
  <div class="field", style="margin-top:-30px;">
	<%= f.hidden_field :is_active, :value => true %>
  </div>
  </p>
  <p>
  <div class="field", style="margin-top:-30px;">
	<%= f.check_box :is_system_admin %>
	<b><%= f.label :is_system_admin %></b>
  </div>
  </p>
  <%#TODO Confirm password%>
  <br />
   <div class="submit"><%= submit_tag "Create person", :class => "button" %></div>
<% end %>
</div>
</div>

<div id="footer">
</div>