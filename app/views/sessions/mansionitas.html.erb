<div id="content-wrap">
  <div id="main"> 
    <h2><b>EL NIDO escapade</b></h2>
		<% start_time =  "2015-02-08 14:46:21 +0100" %>
		<% end_time   =  Date.today %>
		<i><%= distance_of_time_in_words(start_time, end_time)  %> to go</i>
		
	<br />
	<table class="table table-striped table-hover ">
		<thead>
			
			  <tr>
				<th></th>
				<th><%= image_tag "https://graph.facebook.com/catt.anil/picture", :style => "-webkit-border-radius:6px;-moz-border-radius:6px;border-radius:6px;" %> </th>
				<th><%= image_tag "https://graph.facebook.com/princes.pascual/picture", :style => "-webkit-border-radius:6px;-moz-border-radius:6px;border-radius:6px;" %> </th>
				<th><%= image_tag "https://graph.facebook.com/precioussonido/picture", :style => "-webkit-border-radius:6px;-moz-border-radius:6px;border-radius:6px;" %> </th>
			    <th><%= image_tag "https://graph.facebook.com/jennilyn.maniago/picture", :style => "-webkit-border-radius:6px;-moz-border-radius:6px;border-radius:6px;" %> </th>
				<th><%= image_tag "https://graph.facebook.com/kriselda.bello/picture", :style => "-webkit-border-radius:6px;-moz-border-radius:6px;border-radius:6px;" %> </th>
				<th></th>
			  </tr>		
			
		  <tr>
			<th>Date Paid</th>
			<th>C.Anil</th>
			<th>P.Pascual</th>
			<th>P.Sonido</th>
		    <th>J.Maniago</th>
			<th>K.Bello</th>
			<th></th>
		  </tr>
		</thead>

	  <tbody>
	  
		<% @tours.each do |tour| %>
		<tr class="info">
		  <td><%= tour.repository_link %></td>	
		  <td><%= tour.error_count %></td>
		  <td><%= tour.reassigned_count %></td>
		  <td><%= tour.reopen_count %></td>
	   	  <td><%= tour.updated_by %></td>
		  <td><%= tour.created_by %></td>
		  <td></td>
		 </tr>
		<% end %>	 
	
	  <tr class="active">
		<td></td>	
		<td></td>
		<td></td>
		<td></td>
		<td></td>
		<td></td>
		<td></td>
	  </tr>
	
	  <tr class="warning">
		<td>SubTotal</td>	
		<td><%= sum_a = @tours.sum(&:error_count) %></td>
		<td><%= sum_b = @tours.sum(&:reassigned_count) %></td>
		<td><%= sum_c = @tours.sum(&:reopen_count) %></td>
		<td><%= sum_d = @tours.sum(&:updated_by) %></td>
		<td><%= sum_e = @tours.sum(&:created_by) %></td>
		<td></td>
	  </tr>
	
	  <tr class="success">
		<td>10K - SubTotal</td>	
		<td><%= 10000 -  sum_a %></td>
		<td><%= 10000 -  sum_b %></td>
		<td><%= 10000 -  sum_c %></td>
		<td><%= 10000 -  sum_d %></td>
		<td><%= 10000 -  sum_e %></td>
		<td></td>
	  </tr>
		
	  </tbody>		
	</table>

  </div>

  <div id="sidebar">	
	<br /><br /><br />
	<div class="panel panel-primary">
	  <div class="panel-heading">
	    <h3 class="panel-title">Tour Details</h3>
	  </div>
		<div class="panel-body" style="font-size:11px;">
			Cebu Pac Confirmation# : <b>I63ZPV</b><br /><br />
