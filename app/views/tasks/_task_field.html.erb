<% @grouped_tasks.each do |task_status, tasks| %>
	<h3><%= task_status.name %></h3>
	<% tasks.each do |task| %>
	
	  <p style="margin-left:20px;margin-top:-16px;"> <strong><%= link_to "#" + task.task_number.to_s + " - " + truncate(task.title, :length => 35, :omission=>("...")) , project_task_url(:project_id =>  task.project_id, :id => task.id) %></strong> (<% if current_user.id == task.assigned_to %><b>You</b><% else %><%= task.assigned_person.nickname %><% end %>)</p>
	  <p class="post-footer align-right" style="margin-top:-30px;">
	  <span class="date"><%= task.due_date.strftime("%d %B %Y") %> </span>
	  <% if task.task_status.name == "Closed" %>
		<span class="date"><%= task.date_completed.strftime("%d %B %Y") %> </span> 
	  <% elsif task.task_status.name == "Resolved" %>
		<span class="date"><%= task.date_resolved.strftime("%d %B %Y") %> </span>
	  <% else %>
	  	<span class="date"><%= task.due_date.strftime("%d %B %Y") %> </span> 
	  <% end %>
	  </p><br />
  <% end %>
<% end %>