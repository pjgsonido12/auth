<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>Task Tracker</title>
  <%= stylesheet_link_tag    "application", "people", :media => "all" %>
  <%= javascript_include_tag "application","jquery-1.4.2.min", "rails" %>
  <%= javascript_include_tag 'jquery-1.4.2.min','jquery','jquery-ui','jquery_ujs'%>
  <script> var $j = jQuery.noConflict(); </script>	

  <%= yield(:javascripts) %>
  <%= csrf_meta_tags %>
  <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
  <link rel="stylesheet" href="images/SimpleBlog.css" type="text/css" />
</head>

<body>

  <div id="flash">
  <%= render :partial => 'layouts/flash', :object => flash %>
  </div>

<% if session[:user_id] %>	
<div id="wrap">
  <div id="header">
    <h1 id="logo">Task<span class="gray">Tracker</span></h1>
    <h2 id="slogan">designed to organize and execute team tasks. . .</h2>
	<div id="searchform">
      <%= render :partial => "layouts/nav" %>
    </div>
  </div>
	
	<% if current_page?(:controller => 'projects', :action => 'dashboard') %>			
		<div id="menu">
		  <ul>    
			<li id="current"><%= link_to 'Dashboard',dashboard_url %></li>
		    <li><%= link_to 'Projects',projects_url %></li>
		    <% if admin_role %>
    			<li><%= link_to 'People', people_url %></li> 
			<% end %>
		  </ul>
		</div>		
	<% elsif current_page?(:controller => 'projects', :action => 'index') %>  	
		<div id="menu">
	  		<ul>    
				<li><%= link_to 'Dashboard',dashboard_url %></li>
	    		<li id="current"><%= link_to 'Projects',projects_url %></li>
				<% if admin_role %>
	    			<li><%= link_to 'People', people_url %></li> 
				<% end %> 
	  		</ul>
		</div>		
		  
	<% elsif current_page?(:controller => 'people') %>
		<%= render :partial => "layouts/mainlinks" %>	
    <% end %>
        
      <% if session[:project_id] %>
        <%= render :partial => "layouts/project_links" %>           
      <% end %>
<% end %>

<%= yield %>

</div>
</body>
</html>
